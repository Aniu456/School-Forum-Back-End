// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// 用户表
// ============================================
model User {
  id             String    @id @default(uuid())
  username       String    @unique @db.VarChar(50)
  email          String    @unique @db.VarChar(100)
  password       String    @db.VarChar(255) // bcrypt 加密
  nickname       String?   @db.VarChar(100)
  avatar         String?   @db.VarChar(500)
  bio            String?   @db.VarChar(500)
  role           Role      @default(USER)
  isActive       Boolean   @default(true) @map("is_active")
  isBanned       Boolean   @default(false) @map("is_banned")
  canPost        Boolean   @default(true) @map("can_post") // 是否允许发帖
  canComment     Boolean   @default(true) @map("can_comment") // 是否允许评论
  followerCount  Int       @default(0) @map("follower_count")
  followingCount Int       @default(0) @map("following_count")
  lastLoginAt    DateTime? @map("last_login_at") // 最后登录时间
  lastLoginIp    String?   @map("last_login_ip") @db.VarChar(50) // 最后登录IP
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  // 关联关系
  posts             Post[]
  comments          Comment[]
  likes             Like[]
  notifications     Notification[]
  reports           Report[]           @relation("reporter")
  handledReports    Report[]           @relation("handler")
  followers         Follow[]           @relation("Following") // 粉丝列表
  following         Follow[]           @relation("Follower") // 关注列表
  favorites         Favorite[]
  folders           Folder[]
  postDrafts        PostDraft[]
  loginHistories    UserLoginHistory[] // 登录历史
  verificationCodes VerificationCode[] // 验证码
  announcements     Announcement[] // 发布的公告
  userPoints        UserPoints? // 积分
  secondhandItems   SecondhandItem[]
  studyResources    StudyResource[]
  clubRecruitments  ClubRecruitment[]
  lostAndFounds     LostAndFound[]
  carpools          Carpool[]

  @@index([email])
  @@index([username])
  @@map("users")
}

// 用户角色枚举
enum Role {
  USER // 普通用户（开放注册）
  ADMIN // 管理员（后台管理系统专用）
}

// ============================================
// 帖子表
// ============================================
model Post {
  id            String    @id @default(uuid())
  title         String    @db.VarChar(200)
  content       String    @db.Text
  images        String[] // PostgreSQL 数组类型，存储图片 URL
  authorId      String    @map("author_id")
  tags          String[] // 标签数组
  viewCount     Int       @default(0) @map("view_count")
  likeCount     Int       @default(0) @map("like_count")
  commentCount  Int       @default(0) @map("comment_count")
  isDeleted     Boolean   @default(false) @map("is_deleted")
  deletedAt     DateTime? @map("deleted_at")
  isPinned      Boolean   @default(false) @map("is_pinned") // 是否置顶
  isHighlighted Boolean   @default(false) @map("is_highlighted") // 是否精华
  isLocked      Boolean   @default(false) @map("is_locked") // 是否锁定（禁止评论）
  isHidden      Boolean   @default(false) @map("is_hidden") // 是否隐藏
  pinnedAt      DateTime? @map("pinned_at") // 置顶时间
  highlightedAt DateTime? @map("highlighted_at") // 加精时间
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // 关联关系
  author    User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  comments  Comment[]
  favorites Favorite[]

  @@index([authorId, createdAt])
  @@index([createdAt])
  @@index([tags], type: Gin)
  @@index([isDeleted])
  @@index([isPinned, createdAt])
  @@index([isHighlighted, createdAt])
  @@index([isHidden])
  @@map("posts")
}

// ============================================
// 评论表
// ============================================
model Comment {
  id        String    @id @default(uuid())
  content   String    @db.Text
  postId    String    @map("post_id")
  authorId  String    @map("author_id")
  parentId  String?   @map("parent_id") // 父评论ID，用于二级评论
  likeCount Int       @default(0) @map("like_count")
  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  // 关联关系
  post    Post      @relation(fields: [postId], references: [id], onDelete: Cascade)
  author  User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentReplies")

  @@index([postId, createdAt])
  @@index([authorId])
  @@index([parentId])
  @@index([isDeleted])
  @@map("comments")
}

// ============================================
// 点赞表
// ============================================
model Like {
  id         String     @id @default(uuid())
  userId     String     @map("user_id")
  targetId   String     @map("target_id")
  targetType TargetType @map("target_type")
  createdAt  DateTime   @default(now()) @map("created_at")

  // 关联关系
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, targetId, targetType]) // 防止重复点赞
  @@index([userId, targetType, createdAt])
  @@map("likes")
}

// 点赞目标类型枚举
enum TargetType {
  POST // 帖子
  COMMENT // 评论
}

// ============================================
// 通知表
// ============================================
model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String           @db.VarChar(200)
  content   String           @db.Text
  relatedId String?          @map("related_id") @db.VarChar(50) // 相关帖子 / 评论 / 用户 ID
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")

  // 关联关系
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, createdAt])
  @@map("notifications")
}

// 通知类型枚举
enum NotificationType {
  COMMENT // 评论通知
  REPLY // 回复通知
  LIKE // 点赞通知
  SYSTEM // 系统通知
  NEW_POST // 关注的人发布新帖子
  NEW_FOLLOWER // 新粉丝关注
}

// ============================================
// 举报表
// ============================================
model Report {
  id         String       @id @default(uuid())
  reporterId String       @map("reporter_id")
  targetId   String       @map("target_id")
  targetType ReportTarget @map("target_type")
  reason     String       @db.Text
  status     ReportStatus @default(PENDING)
  handlerId  String?      @map("handler_id")
  handleNote String?      @map("handle_note") @db.Text
  createdAt  DateTime     @default(now()) @map("created_at")
  handledAt  DateTime?    @map("handled_at")

  // 关联关系
  reporter User  @relation("reporter", fields: [reporterId], references: [id], onDelete: Cascade)
  handler  User? @relation("handler", fields: [handlerId], references: [id], onDelete: SetNull)

  @@index([status, createdAt])
  @@index([reporterId])
  @@index([targetId, targetType])
  @@map("reports")
}

// 举报目标类型枚举
enum ReportTarget {
  POST // 帖子
  COMMENT // 评论
  USER // 用户
}

// 举报状态枚举
enum ReportStatus {
  PENDING // 待处理
  APPROVED // 已通过
  REJECTED // 已拒绝
}

// ============================================
// 帖子草稿表
// ============================================
model PostDraft {
  id        String   @id @default(uuid())
  title     String?  @db.VarChar(200)
  content   String?  @db.Text
  images    String[] // 图片数组
  tags      String[] // 标签数组
  authorId  String   @map("author_id")
  postId    String?  @map("post_id") // 关联已发布的帖子（可空）
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // 关联关系
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId, updatedAt])
  @@index([authorId, createdAt])
  @@map("post_drafts")
}

// ============================================
// 关注表
// ============================================
model Follow {
  id          String   @id @default(uuid())
  followerId  String   @map("follower_id") // 关注者
  followingId String   @map("following_id") // 被关注者
  createdAt   DateTime @default(now()) @map("created_at")

  // 关联关系
  follower  User @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId]) // 防止重复关注
  @@index([followerId])
  @@index([followingId])
  @@index([createdAt])
  @@map("follows")
}

// ============================================
// 帖子评分表（用于排序和推荐）
// ============================================
model PostScore {
  id            String   @id @default(uuid())
  postId        String   @unique @map("post_id")
  hotScore      Float    @default(0) @map("hot_score")
  trendingScore Float    @default(0) @map("trending_score")
  qualityScore  Float    @default(0) @map("quality_score")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([hotScore])
  @@index([trendingScore])
  @@index([qualityScore])
  @@map("post_scores")
}

// ============================================
// 话题表
// ============================================
model Topic {
  id            String   @id @default(uuid())
  name          String   @unique @db.VarChar(50)
  description   String?  @db.VarChar(200)
  postCount     Int      @default(0) @map("post_count")
  followerCount Int      @default(0) @map("follower_count")
  isHot         Boolean  @default(false) @map("is_hot")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@index([postCount])
  @@index([isHot])
  @@map("topics")
}

// ============================================
// 收藏夹表
// ============================================
model Folder {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String   @db.VarChar(50)
  description String?  @db.VarChar(200)
  isDefault   Boolean  @default(false) @map("is_default")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // 关联关系
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  favorites Favorite[]

  @@index([userId])
  @@index([isDefault])
  @@map("folders")
}

// ============================================
// 收藏表
// ============================================
model Favorite {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  postId    String   @map("post_id")
  folderId  String   @map("folder_id")
  note      String?  @db.Text // 收藏备注
  createdAt DateTime @default(now()) @map("created_at")

  // 关联关系
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@unique([userId, postId, folderId]) // 同一用户在同一收藏夹内不能重复收藏同一帖子
  @@index([userId, createdAt])
  @@index([postId])
  @@index([folderId])
  @@map("favorites")
}

// ============================================
// 用户登录历史表
// ============================================
model UserLoginHistory {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  loginIp   String   @map("login_ip") @db.VarChar(50)
  loginTime DateTime @default(now()) @map("login_time")
  userAgent String?  @map("user_agent") @db.VarChar(500)
  device    String?  @db.VarChar(100) // 设备类型
  location  String?  @db.VarChar(100) // 登录地点

  // 关联关系
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, loginTime])
  @@map("user_login_histories")
}

// ============================================
// 验证码表
// ============================================
model VerificationCode {
  id        String               @id @default(uuid())
  userId    String?              @map("user_id") // 可为空（注册时还没有用户ID）
  email     String               @db.VarChar(100)
  code      String               @db.VarChar(10)
  type      VerificationCodeType
  isUsed    Boolean              @default(false) @map("is_used")
  expiresAt DateTime             @map("expires_at")
  createdAt DateTime             @default(now()) @map("created_at")

  // 关联关系
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email, type, isUsed])
  @@index([expiresAt])
  @@map("verification_codes")
}

// 验证码类型枚举
enum VerificationCodeType {
  REGISTER // 注册验证
  RESET_PASSWORD // 重置密码
  CHANGE_EMAIL // 更换邮箱
}

// ============================================
// 系统公告表
// ============================================
model Announcement {
  id          String           @id @default(uuid())
  title       String           @db.VarChar(200)
  content     String           @db.Text
  type        AnnouncementType @default(INFO)
  targetRole  Role?            @map("target_role") // 目标角色（空表示所有人）
  isPublished Boolean          @default(false) @map("is_published")
  isPinned    Boolean          @default(false) @map("is_pinned") // 是否置顶
  authorId    String           @map("author_id")
  publishedAt DateTime?        @map("published_at")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  // 关联关系
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([isPublished, isPinned, createdAt])
  @@index([targetRole])
  @@map("announcements")
}

// 公告类型枚举
enum AnnouncementType {
  INFO // 一般公告
  WARNING // 警告公告
  URGENT // 紧急公告
}

// ============================================
// 用户积分表
// ============================================
model UserPoints {
  id          String   @id @default(uuid())
  userId      String   @unique @map("user_id")
  totalPoints Int      @default(0) @map("total_points")
  level       Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  pointsHistories UserPointsHistory[]

  @@index([totalPoints])
  @@index([level])
  @@map("user_points")
}

// ============================================
// 积分历史表
// ============================================
model UserPointsHistory {
  id           String       @id @default(uuid())
  userPointsId String       @map("user_points_id")
  action       PointsAction
  points       Int
  reason       String?      @db.VarChar(200)
  relatedId    String?      @map("related_id")
  createdAt    DateTime     @default(now()) @map("created_at")

  userPoints UserPoints @relation(fields: [userPointsId], references: [id], onDelete: Cascade)

  @@index([userPointsId, createdAt])
  @@map("user_points_histories")
}

// 积分行为枚举
enum PointsAction {
  POST_CREATED // 发布帖子 +10
  POST_DELETED // 删除帖子 -10
  COMMENT_CREATED // 发布评论 +5
  COMMENT_DELETED // 删除评论 -5
  RECEIVED_LIKE // 获得点赞 +2
  LIKE_REMOVED // 被取消点赞 -2
  POST_HIGHLIGHTED // 帖子被加精 +50
  DAILY_LOGIN // 每日登录 +1
  CONTINUOUS_LOGIN // 连续登录奖励 +5
  ADMIN_REWARD // 管理员奖励
  ADMIN_PENALTY // 管理员扣除
}

// ============================================
// 二手交易
// ============================================
model SecondhandItem {
  id          String        @id @default(uuid())
  title       String        @db.VarChar(200)
  description String        @db.Text
  price       Float
  images      String[]
  category    String        @db.VarChar(50)
  condition   ItemCondition
  status      ItemStatus    @default(AVAILABLE)
  sellerId    String        @map("seller_id")
  viewCount   Int           @default(0) @map("view_count")
  location    String?       @db.VarChar(100)
  contact     String        @db.VarChar(100)
  isDeleted   Boolean       @default(false) @map("is_deleted")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  seller User @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([category])
  @@index([sellerId])
  @@map("secondhand_items")
}

enum ItemCondition {
  NEW // 全新
  LIKE_NEW // 几乎全新
  GOOD // 良好
  FAIR // 一般
  POOR // 较差
}

enum ItemStatus {
  AVAILABLE // 在售
  RESERVED // 已预定
  SOLD // 已售出
}

// ============================================
// 学习资源
// ============================================
model StudyResource {
  id            String       @id @default(uuid())
  title         String       @db.VarChar(200)
  description   String       @db.Text
  category      String       @db.VarChar(50)
  type          ResourceType
  fileUrl       String?      @map("file_url") @db.VarChar(500)
  link          String?      @db.VarChar(500)
  authorId      String       @map("author_id")
  tags          String[]
  viewCount     Int          @default(0) @map("view_count")
  downloadCount Int          @default(0) @map("download_count")
  likeCount     Int          @default(0) @map("like_count")
  isDeleted     Boolean      @default(false) @map("is_deleted")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([category, createdAt])
  @@index([type])
  @@index([authorId])
  @@map("study_resources")
}

enum ResourceType {
  DOCUMENT // 文档
  VIDEO // 视频
  LINK // 链接
  CODE // 代码
  OTHER // 其他
}

// ============================================
// 社团招新
// ============================================
model ClubRecruitment {
  id           String            @id @default(uuid())
  clubName     String            @map("club_name") @db.VarChar(100)
  description  String            @db.Text
  requirements String            @db.Text
  contact      String            @db.VarChar(100)
  logo         String?           @db.VarChar(500)
  images       String[]
  category     String            @db.VarChar(50)
  recruitCount Int?              @map("recruit_count")
  deadline     DateTime?
  publisherId  String            @map("publisher_id")
  viewCount    Int               @default(0) @map("view_count")
  status       RecruitmentStatus @default(OPEN)
  isDeleted    Boolean           @default(false) @map("is_deleted")
  createdAt    DateTime          @default(now()) @map("created_at")
  updatedAt    DateTime          @updatedAt @map("updated_at")

  publisher User @relation(fields: [publisherId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([category])
  @@index([publisherId])
  @@map("club_recruitments")
}

enum RecruitmentStatus {
  OPEN // 招新中
  CLOSED // 已结束
  PAUSED // 暂停
}

// ============================================
// 失物招领
// ============================================
model LostAndFound {
  id          String          @id @default(uuid())
  title       String          @db.VarChar(200)
  description String          @db.Text
  images      String[]
  type        LostFoundType
  category    String          @db.VarChar(50)
  location    String          @db.VarChar(200)
  date        DateTime
  contact     String          @db.VarChar(100)
  publisherId String          @map("publisher_id")
  status      LostFoundStatus @default(OPEN)
  isDeleted   Boolean         @default(false) @map("is_deleted")
  createdAt   DateTime        @default(now()) @map("created_at")
  updatedAt   DateTime        @updatedAt @map("updated_at")

  publisher User @relation(fields: [publisherId], references: [id], onDelete: Cascade)

  @@index([type, status, createdAt])
  @@index([category])
  @@index([publisherId])
  @@map("lost_and_found")
}

enum LostFoundType {
  LOST // 寻物
  FOUND // 招领
}

enum LostFoundStatus {
  OPEN // 进行中
  RESOLVED // 已解决
  CLOSED // 已关闭
}

// ============================================
// 拼车拼单
// ============================================
model Carpool {
  id            String        @id @default(uuid())
  title         String        @db.VarChar(200)
  type          CarpoolType
  departure     String        @db.VarChar(100)
  destination   String        @db.VarChar(100)
  departureTime DateTime      @map("departure_time")
  seats         Int
  price         Float?
  description   String?       @db.Text
  contact       String        @db.VarChar(100)
  publisherId   String        @map("publisher_id")
  status        CarpoolStatus @default(OPEN)
  isDeleted     Boolean       @default(false) @map("is_deleted")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  publisher User @relation(fields: [publisherId], references: [id], onDelete: Cascade)

  @@index([type, status, departureTime])
  @@index([departure])
  @@index([destination])
  @@index([publisherId])
  @@map("carpools")
}

enum CarpoolType {
  CARPOOL // 拼车
  GROUP_BUY // 拼单
}

enum CarpoolStatus {
  OPEN // 进行中
  FULL // 已满
  CLOSED // 已结束
}
